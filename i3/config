# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# kill focused window
bindsym $mod+Shift+q kill

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+End exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# Resize window with vim keys...
bindsym $mod+Control+h resize shrink width 10 px or 10 ppt
bindsym $mod+Control+j resize grow height 10 px or 10 ppt
bindsym $mod+Control+k resize shrink height 10 px or 10 ppt
bindsym $mod+Control+l resize grow width 10 px or 10 ppt

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        workspace_buttons yes
        i3bar_command i3bar --transparency
        status_command i3status
        position bottom 
        #position top 
        colors {
            background #2f343f00
            #statusline #2f343f
            separator #4b5262

            # colour of border, background, and text
            focused_workspace       #2f343f #bf616a00 #d8dee8
            active_workspace        #2f343f00 #2f343f00 #d8dee8
            inactive_workspace      #2f343f00 #2f343f00 #d8dee8
            urgent_workspace        #2f343f #ebcb8b #2f343f
        }
}

# Remap Caps Lock to CTRL
exec --no-startup-id /usr/bin/setxkbmap -option "ctrl:nocaps"
bindsym Print exec --no-startup-id xfce4-screenshooter
# bindsym Print exec scrot -s
# exec ./test.sh
bindsym $mod+0 exec --no-startup-id test.sh



set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -c 000000, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+End mode "$mode_system"
bindsym $mod+Shift+period exec "i3lock -c 000000 && systemctl suspend"

exec "xautolock -detectsleep -time 3 -locker \"i3lock -c 000000\""
for_window [title="^Android Emulator.+:[0-9]+$"] floating enable
for_window [title="^AppDevWindowPreview$"] floating enable
#for_window [all] border none
gaps inner 10px
gaps outer 5px

